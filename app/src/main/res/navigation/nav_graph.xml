<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.tuncay.recipebook.view.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_recipeFragment"
            app:destination="@id/recipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.tuncay.recipebook.view.RecipeFragment"
        android:label="fragment_recipe"
        tools:layout="@layout/fragment_recipe" >
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="info"
            app:argType="boolean" />
        <action
            android:id="@+id/action_recipeFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <argument
        android:name="info"
        app:argType="string" />
    <argument
        android:name="id"
        app:argType="integer" />
</navigation>